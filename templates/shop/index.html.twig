{% extends 'base.html.twig' %}

{% block title %}{{ sitename }} - {{ title }}{% endblock %}

{% block body %}
<div class="d-flex justify-content-center">
    <div class="m-2 container row flex-row text-center" style="max-width:500px">
        {{ form(form, {'attr': {'class': 'align-items-center'}}) }}
    </div>
</div>

<div class="container text-center">
    {% for shopping in shopList %}
    <div class="row mb-4 recipe-row overflow-hidden align-items-center">
        <div class="col-lg-2">
            {{ shopping.date |date('Y-m-d') }}
        </div>
        <div class="col-lg-3">
            <strong>Name:</strong> {{ shopping.name }}
        </div>
        <div class="col-lg-2">
            <strong>Recipes:</strong> {{ shopping.recipes }}
        </div>
        <div class="col-lg-2">
            <strong>Items:</strong> {{ shopping.items }}
        </div>
        <div class="col-lg-3 ps-4">
            <a type="button" class="btn btn-success btn-sm" href={{ path('user_shop_view', {'id': shopping.id}) }}>View</a>
            <a type="button" class="btn btn-warning btn-sm ms-3 me-3" href={{ path('user_shop_edit', {'id': shopping.id}) }}>Edit</a>
            <a type="button" class="btn btn-danger btn-sm" href={{ path('user_shop_delete', {'id': shopping.id}) }}>Delete</a>
        </div>
    </div>
    {% endfor %}
</div>    
{% endblock %}
